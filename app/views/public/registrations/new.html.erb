<div class="container">
	<div calss="row">
    <!__<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
    <div class="col-sm-12">

      <h2>新規会員登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-row">
          <legend class="col-form-label col-sm">名前</legend>
          <legend class="col-form-label col-auto">(性)</legend>
          <div class="form-group col-sm">
            <%= f.text_field :first_name, autofocus: true, :placeholder => "令和" %>
          </div>
          <legend class="col-form-label col-auto">(名)</legend>
          <div class="form-group col-sm">
            <%= f.text_field :last_name, autofocus: true, :placeholder => "道子" %>
          </div>
        </div>

        <div class="form-row">
          <legend class="col-form-label col-sm">フリガナ</legend>
          <legend class="col-form-label col-auto">(セイ)</legend>
          <div class="form-group col-sm">
            <%= f.text_field :first_name_kana, autofocus: true, :placeholder => "レイワ" %>
          </div>
          <legend class="col-form-label col-auto">(メイ)</legend>
          <div class="form-group col-sm">
              <%= f.text_field :last_name_kana, autofocus: true, :placeholder => "ミチコ" %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-sm">郵便番号（ハイフンなし）</div>
          <div class="form-group col-sm">
            <%= f.email_field :email, class: 'from-controll', autofocus: true, :placeholder => "sample@example.com"  %>
          </div>
          <div class="form-group col-sm"></div>
        </div>

        <div class="form-row">
          <div class="form-group col-sm">メールアドレス</div>
          <div class="form-group col-sm">
            <%= f.text_field :postal_code, class: 'from-controll', autofocus: true,  :placeholder => "0000000"  %>
          </div>
          <div class="form-group col-sm"></div>
        </div>

        <div class="form-row">
          <div class="form-group col-sm">住所</div>
          <div class="form-group col-sm">
            <%= f.text_field :address, class: 'col-sm-12', autofocus: true, :placeholder => "東京都渋谷区代々木神園町0ｰ0" %>
          </div>
          <div class="form-group col-sm"></div>
        </div>

        <div class="form-row">
          <div class="form-group col-sm">電話番号(ハイフンなし)</div>
          <div class="form-group col-sm">
            <%= f.text_field :telephone_number, class: 'col-sm-12', autofocus: true, :placeholder => "00000000000"  %>
          </div>
          <div class="form-group col-sm"></div>
        </div>

        <div class="form-row">
          <div class="form-group col-sm">パスワード(6文字以上)</div>
          <div class="form-group col-sm">
            <%= f.password_field :password %>
          </div>
          <div class="form-group col-sm"></div>
        </div>

        <div class="form-row">
          <div class="form-group col-sm">パスワード(確認用)</div>
          <div class="form-group col-sm">
            <%= f.password_field :password_confirmation %>
          </div>
          <div class="form-group col-sm"></div>
        </div>

        <div class="from-row">
          <div class="form-group col-sm"></div>
          <div class="form-group col-sm">
            <%= f.submit "新規登録", class:'btn btn-success btn-sm form-group col-6 sign_in' %>
          </div>
          <div class="form-group col-sm"></div>
        </div>
      <% end %>

<%= render "public/shared/links" %>
