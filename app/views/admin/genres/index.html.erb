<div class="container">
	<div calss="row">
		<div class="col-sm-12 pt-3">

			<h3>
				<span class="bg-secondary text-white">　ジャンル一覧・追加　</span>
 			</h3>
		</div>

		<%= form_with url: admin_genres_path, model: @new_genre, method: :post do |f| %>
			<div class="col-sm-8 pt-5">
				<div class="form-row">
					<div class="form-group col-sm-2">ジャンル名</div>

					<div class="form-group col-sm">
						<%= f.text_field :name, autofocus: true%>
					</div>

					<div class="form-group col-sm">
						<%= f.submit "新規登録", class:'btn btn-success form-group col-6 sign_in' %>
					</div>
				</div>
			</div>
		<% end %>

		<div class="col-sm-6 pt-5">
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>ジャンル</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %>
						<td>
							<%= link_to "編集する", edit_admin_genre_path(genre.id), class:'btn btn-success btn-sm mb-3 sign_in'%>
						</td>
					</tr>
				<% end %>
				<%= paginate @genres %>
				</tbody>
			</table>
		</div>
	</div>
</div>


