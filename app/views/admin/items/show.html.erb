<div class="container">
	<div calss="row">
		<div class="col-sm-12 pt-3 ">

	      <h3>
	      	<span class="bg-secondary text-white">　<%= @customer.first_name + @customer.last_name%>さんの会員情報　</span>
	      </h3>

		<table class="table table-borderless">
			<tbody>
				<tr>
					<td>会員ID</td>
					<td><%= @customer.id %></td>
				</tr>
				<tr>
					<td>氏名</td>
					<td><%= @customer.first_name + @customer.last_name %></td>
				</tr>
				<tr>
					<td>カナ</td>
					<td><%= @customer.first_name_kana + @customer.last_name_kana %></td>
				</tr>
				<tr>
					<td>郵便番号</td>
					<td><%= @customer.postal_code %></td>
				</tr>
				<tr>
					<td>住所</td>
					<td><%= @customer.address %></td>
				</tr>
				<tr>
					<td>電話番号</td>
					<td><%= @customer.telephone_number %></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td><%= @customer.email %></td>
				</tr>
				<tr>
					<td>会員ステータス</td>
					<% if @customer.is_deleted? %>
						<td class="text-success font-weight-bold">有効
					<% else %>
						<td class="text-secondary font-weight-bold">退会
					<% end %>
					</td>
				</tr>
			</tbody>
		</table>

	    <div class="form-row">
	      <div class="form-group col-sm">
	        <%= link_to "編集する", edit_admin_customer_path, class:'btn btn-success btn-sm mb-3 sign_in'%>
	      </div>
	      <div class="form-group col-sm">
	        <%= link_to "注文履歴を見る", edit_admin_customer_path, class:'btn btn-primary btn-sm mb-3 sign_in'%>
	      </div>
	    </div>


		</div>
	</div>
</div>