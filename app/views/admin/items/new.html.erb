<div class="container">
	<div calss="row">
		<div class="col-sm-12 pt-3 ">

			<h3>
				<span class="bg-secondary text-white">　新規商品登録　</span>
 			</h3>

			<%= form_with url: admin_items_path, model: @new_item, method: :post do |f| %>
				<div class="col-sm-8 mx-auto pt-5">
					<div class="form-row">
						<div class="form-group col-sm-4">商品画像</div>
						<div class="form-group col-sm">
						  <%= f.file_field :item_image, accept: "image/*" %>
						</div>
					</div>

					<div class="form-row">
						<div class="form-group col-sm-4">商品名</div>
						<div class="form-group col-sm">
						  <%= f.text_field :name, size: "40", autofocus: true, :placeholder => "商品名"  %>
						</div>
					</div>

					<div class="form-row">
						<div class="form-group col-sm-4">商品説明</div>
						<div class="form-group col-sm">
						  <%= f.text_area :introduction, size: "43x5", autofocus: true, :placeholder => "ここに説明文を記述します"  %>
						</div>
					</div>

					<div class="form-row">
						<div class="form-group col-sm-4">ジャンル</div>
						<div class="form-group col-sm">
							<%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択して下さい" %>
						</div>
					</div>

					<div class="form-row">
						<div class="form-group col-sm-4">税抜価格</div>
						<div class="form-group col-sm">
						  <%= f.text_field :price, size: "40", autofocus: true, :placeholder => "1000"  %>
						</div>
					</div>

	        <div class="form-row">
	          <div class="form-group col-sm-4">販売ステータス</div>
	          <div class="form-group col-sm">
							<%= f.radio_button(:is_active, 1, :checked => true) %>販売中
							<%= f.radio_button(:is_active, 0) %>販売停止中
						</div>
	          <div class="form-group col-sm"></div>
	        </div>


	        <div class="from-row">
	          <div class="form-group col-sm"></div>
	          <div class="form-group col-sm">
	            <%= f.submit "編集内容を保存", class:'btn btn-success form-group col-6 sign_in' %>
	          </div>
	        </div>

				</div>
			<% end %>
    </div>
  </div>
</div>
