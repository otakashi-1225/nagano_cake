<div class="container">
	<div calss="row">
		<div class="col-sm-12 pt-3 ">

			<h3>
				<span class="bg-secondary text-white">　商品一覧　</span>
 			</h3>

			<div class="col-sm-10 center-block">
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>商品ID</th>
							<th>商品名</th>
							<th>税抜価格</th>
							<th>ジャンル</th>
							<th colspan="3">ステータス</th>
						</tr>
					</thead>
					<tbody>
					<% @items.each do |item| %>
						<tr>
							<td><%= item.id %>
							<td><%= link_to item.name, admin_customer_path(item.id) %></td>
							<td><%= customer.email %></td>
							<% if customer.is_deleted? %>
								<td class="text-success font-weight-bold">有効
							<% else %>
								<td class="text-secondary font-weight-bold">退会
							<% end %>
							</td>
						</tr>
					<% end %>
					<%= paginate @customers %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


