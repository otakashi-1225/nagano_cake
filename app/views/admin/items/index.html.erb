<div class="container">
	<div calss="row">
		<div class="col-sm-12 pt-3 ">

			<h3>
				<span class="bg-secondary text-white">　商品一覧　</span>
 			</h3>

			<%= link_to (new_admin_item_path), class: 'float-right' do %>
				<i class="fas fa-folder-plus"></i>
			<% end %>

			</div>
			<div class="col-sm-10 pt-3 center-block">
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>商品ID</th>
							<th>商品名</th>
							<th>税抜価格</th>
							<th>ジャンル</th>
							<th colspan="3">ステータス</th>
						</tr>
					</thead>
					<tbody>
					<% @items.each do |item| %>
						<tr>
							<td><%= item.id %>
							<td><%= link_to item.name, admin_item_path(item.id) %></td>
							<td><%= item.price.to_s(:delimited) %></td>
							<td><%= @genres.find(item.genre_id).name %></td>
							<% if item.is_active? %>
								<td class="text-success font-weight-bold">販売中
							<% else %>
								<td class="text-secondary font-weight-bold">販売停止中
							<% end %>
							</td>
						</tr>
					<% end %>
					<%= paginate @items %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


