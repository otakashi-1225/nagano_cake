<div class="container">
	<div calss="row">
		<div class="col-sm-12 pt-3 ">

			<h3>
				<span class="bg-secondary text-white">　会員一覧　</span>
 			</h3>

			<div class="col-sm-10 center-block">
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>会員ID</th>
							<th>名前</th>
							<th>メール</th>
							<th colspan="3">ステータス</th>
						</tr>
					</thead>
					<tbody>
					<% @customers.each do |customer| %>
						<tr>
							<td><%= customer.id %>
							<td><%= link_to customer.first_name+customer.last_name, admin_customer_path(customer.id) %></td>
							<td><%= customer.email %></td>
							<% if customer.is_deleted? %>
								<td class="text-success font-weight-bold">有効
							<% else %>
								<td class="text-secondary font-weight-bold">退会
							<% end %>
							</td>
						</tr>
					<% end %>
					<%= paginate @customer %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


